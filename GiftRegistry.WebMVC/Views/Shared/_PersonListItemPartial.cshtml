@model GiftRegistry.Models.PersonListItem_Stranger

<div class="col column-gallery">
    <div class="card h-100">

        @if (Model.ProfilePicture != null)
        {
            var base64 = Convert.ToBase64String(Model.ProfilePicture);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <div class="card-img-section mb-2">
                <div class="img-wrapper">
                    <img src="@imgSrc" class="card-img-top mx-auto" alt="Friend Profile Picture">
                </div>
            </div>
        }


        <div class="card-body pt-0">
            <h5 class="card-title">@Model.FullName</h5>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-center">

                @Html.ActionLink("Add Friend", "Create", "Friend", new { id = Model.PersonID, name = Model.FullName }, new { @class = "btn btn-gold btn-action" })

            </div>
        </div>
    </div>
</div>

<style>

    .img-wrapper {
        overflow: hidden;
        width: 250px;
        height: 250px;
        border-bottom: 1px solid rgba(143, 143, 143, .5);
    }

    .card-img-top {
        width: 250px;
        height: auto;
        aspect-ratio: 1.0;
        object-fit: cover;
        transform: scale(1.08);
        transform-origin: 50% 50%;
        overflow: hidden;
        background-color: rgba(224, 184, 64, .25);
    }

    .card-title {
    }

    .card-text {
        margin-bottom: 0px;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 2px 6px 6px rgba(143, 143, 143, 0.75);
    }

</style>