@model GiftRegistry.Models.NotificationDetail

<div class="modal fade" id="detailsNotification">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="detailsNotificationLabel">Notification Details</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div>
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Message)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Message)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateUpdated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateUpdated)
                        </dd>

                        @if (Model.Sender != null)
                        {
                            <dt>
                                @Html.DisplayNameFor(model => model.Sender.FullName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sender.FullName)
                            </dd>
                        }
                    </dl>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-footer">
                        <button type="button" class="btn btn-gray-light" data-bs-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
