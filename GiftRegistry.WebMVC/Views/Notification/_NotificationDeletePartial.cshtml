@model GiftRegistry.Models.NotificationDetail


<div class="modal fade" id="deleteNotification">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="deleteNotificationLabel">Delete Notification</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <h5 class="mb-2">Are you sure you want to delete this?</h5>
                <div>
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Message)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Message)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateUpdated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateUpdated)
                        </dd>

                        @if (Model.Sender != null)
                        {
                            <dt>
                                @Html.DisplayNameFor(model => model.Sender.FullName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sender.FullName)
                            </dd>
                        }
                    </dl>
                </div>

                @using (Html.BeginForm("Delete", "Notification", new { @id = Model.NotificationID }, FormMethod.Post, new { @id = "basic-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-footer">
                        <button type="button" class="btn btn-gray-light" data-bs-dismiss="modal">Close</button>
                        <input type="button" value="Delete" data-save="modal" class="btn btn-red" id="btnDeleteNotificationSubmit" />
                    </div>
                }

            </div>
        </div>
    </div>
