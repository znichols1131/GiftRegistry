@model GiftRegistry.Models.TransactionDetail

<div class="modal fade" id="detailsTransaction">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="detailsTransactionLabel">Transaction Details</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div>
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Gift.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Gift.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.QtyGiven)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.QtyGiven)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.RecipientName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RecipientName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateModified)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateModified)
                        </dd>
                    </dl>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-gray-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-gray-dark btn-button-to-other-modal" data-save="modal" id="btnDetailsGoToEditTransaction"
                            data-url="@Url.Action("Edit", "Transaction", new { id = Model.TransactionID })">
                        Edit
                    </button>
                </div>

            </div>
        </div>
    </div>
