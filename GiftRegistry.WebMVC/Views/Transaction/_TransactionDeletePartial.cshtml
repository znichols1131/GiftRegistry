@model GiftRegistry.Models.TransactionDetail


<div class="modal fade" id="deleteTransaction">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="deleteTransactionLabel">Delete Transaction</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <h5 class="mb-2">Are you sure you want to delete this?</h5>
                <div>
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Gift.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Gift.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.QtyGiven)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.QtyGiven)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.RecipientName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RecipientName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateModified)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateModified)
                        </dd>
                    </dl>
                </div>

                @using (Html.BeginForm("Delete", "Transaction", new { @id = Model.TransactionID }, FormMethod.Post, new { @id = "basic-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-footer">
                        <button type="button" class="btn btn-gray-light" data-bs-dismiss="modal">Close</button>
                        <input type="button" value="Delete" data-save="modal" class="btn btn-red" id="btnDeleteTransactionSubmit" />
                    </div>
                }

            </div>
        </div>
    </div>
